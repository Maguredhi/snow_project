<h1 class="text-2xl font-medium leading-6 text-gray-900 mb-5">Post List</h1>
<% @posts.each do |post| %>
  <div class="bg-white shadow overflow-hidden sm:rounded-lg mb-6">
    <div class="px-4 py-5 sm:px-6 flex">
      <h3 class="text-lg leading-6 font-medium hover:text-gray-500 text-gray-900"><%= link_to post.title, edit_post_path(post) %></h3>
      <% if post.published? %>
        <%= content_tag :p, '已發佈', class: 'tag-orange' %>
      <% else %>
        <%= content_tag :p, '未發佈', class: 'tag-gray' %>
      <% end %>
    </div>
    <div class="border-t border-gray-200">
      <dl>
        <div class="px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">
            地點
          </dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            <%= post.location %>
          </dd>
        </div>
        <hr>
        <div class="px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">
            內容
          </dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            <%= post.content %>
          </dd>
        </div>
        <div class="bg-gray-50 px-4 py-3 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500 mt-2">
            最後編輯時間：<%= time_ago_in_words(post.updated_at) %>
          </dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2 text-right">
            <%= link_to "edit", edit_post_path(post), class: "btn-secondary mr-2" %>
            <%= link_to "delete", post, class: "btn-danger",
              data: {
                "turbo-method": :delete
              }
            %>
          </dd>
        </div>
      </dl>
    </div>
  </div>
<% end %>
