<div class="min-h-full flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div>
      <%= image_tag "snow_icon.png", class: 'block h-12 w-auto rounded-full mx-auto' %>
      <p class="mt-2 text-center text-sm text-gray-800 font-bold">
        Ski & Snowboard
      </p>
      <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
        Edit Profile
      </h2>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="col-span-6 sm:col-span-4 mb-4">
        <%= f.label :username, class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :username, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
      </div>

      <div class="col-span-6 sm:col-span-4 mb-4">
      <div class="mb-2 profile-avatar"><%= avatar(current_user) %></div>
        <label class="bg-white py-2 px-3 border border-gray-300 rounded-md shadow-sm text-sm leading-4 font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
          Photo
          <span class="hidden">
            <%= f.file_field :avatar %>
          </span>
        </label>
      </div>

      <div class="col-span-6 sm:col-span-4 mb-4">
        <%= f.label :intro, class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_area :intro, rows: 10, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
      </div>

      <div class="col-span-6 sm:col-span-4 mb-4">
        <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
        <%= f.email_field :email, autocomplete: "email", class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="col-span-6 sm:col-span-4 mb-4">
        <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
      </div>
      <div class="col-span-6 sm:col-span-4 mb-4">
        <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
      </div>
      <!--
      <div class="col-span-6 sm:col-span-4 mb-4">
        <%= f.label :current_password, class: "block text-sm font-medium text-gray-700" %> <i class="text-xs text-gray-600">(we need your current password to confirm your changes)</i>
        <%= f.password_field :current_password, autocomplete: "current-password", class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
      </div>
      -->

      <div class="actions">
        <%= f.submit "Update", class: "relative w-full flex justify-center btn-primary" %>
      </div>
      <div class="actions mt-4">
        <%= link_to "Back", :back, class: "relative w-full flex justify-center btn-secondary" %>
      </div>
    <% end %>
  </div>
</div>
